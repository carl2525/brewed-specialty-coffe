  float: right;
  padding-right: 8px;
  padding-top: 10px;
}


 .dropdown-btn {
  padding: 6px 8px 6px 20px;
  text-decoration: none;
  font-size: 20px;
  color: var(--white);
  display: block;
  border: none;
  background: none;
  width:100%;
  text-align: left;
  cursor: pointer;
  outline: none;
  line-height: 40px;
}

/* On mouse-over */
.sidenav a:hover, .dropdown-btn:hover {
  color: #f1f1f1;
  padding-left: 30px;
  color: var(--light-brown);
}



