label #btn{
	left: 40px;
	top: 25px;
	font-size: 35px;
	color: var(--mid-brown);
	padding: 6px 12px;
	transition: all .5s;
	position: absolute;
	cursor: pointer;
	border-radius: 3px;
	
}

label #cancel {
	z-index: 1111;
	left: -195px;
	top: 17px;
	font-size: 30px;
	color: var(--white);
	padding: 4px 9px;
	transition: all .5s ease;
	position: absolute;
	cursor: pointer;
	background: var(--black);
	border-radius: 3px;
}

#check:checked ~ .sidebar{
	left: 0;
	background-color: var(--mid-brown);
	z-index: 1;
}

#check:checked ~ label #btn{
	left: 250px;
	opacity: 0;
	pointer-events: none;
}

#check:checked ~ label #cancel{
	left: 195px;

}

#check:checked ~ section .dashboard{
	margin-left: 250px;
}

#check:checked ~ section {
	margin-left: 250px;
}

#check:checked ~ .tableorders {
	margin-left: 250px;
}

.account-box {
	padding-top: 4rem;
	margin-left: 1rem;
	
}

.account-box p {
	font-size: 12px;
	color: var(--light-brown);
	padding-bottom: 1rem;
}

