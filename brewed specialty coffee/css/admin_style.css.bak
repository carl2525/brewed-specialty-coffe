@import url('https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;600&display=swap');

:root{
   --red:#c0392b;
   --black:#333;
   --white:#fff;
   --light-brown:#FEF8D0;
   --dark-brown:#402218;
   --mid-brown:#865439;
   --light-color:#666;
   --brown:#d3ad7f;
   --light-white:#ccc;
   --light-bg:#f5f5f5;
   --sand-dollar:#E4D4C8;
   --tan:#D0B49F;
   --brownn:#A47551;
   --carafe:#523A28;
   --tbbrown:#6F4E37;
   --border:.1rem solid var(--black);
   --box-shadow:0 .5rem 1rem rgba(0,0,0,.1);
}

*{
   font-family: 'Rubik', sans-serif;
   margin:0; padding:0;
   box-sizing: border-box;
   outline: none; border:none;
   text-decoration: none;
   transition:all .2s linear;
   scroll-behavior: smooth;
}

*::selection{
   background-color: var(--brown);
   color:var(--white);
}

*::-webkit-scrollbar{
   height: .5rem;
   width: 1rem;
}

*::-webkit-scrollbar-track{
   background-color: transparent;
}

*::-webkit-scrollbar-thumb{
   background-color: var(--brown);
}

html{
   font-size: 62.5%;
   overflow-x: hidden;
}

body{
   background-color: var(--light-bg);
}

section{
   padding:3rem 2rem;
   margin-left: 200px;
}

.title{
   text-align: center;
   margin-bottom: 5rem;
   text-transform: uppercase;
   color:var(--black);
   font-size: 4rem;
}

.empty{
   padding:1.5rem;
   text-align: center;
   border:var(--border);
   background-color: var(--white);
   color:var(--red);
   font-size: 2rem;
}

.message{
   position: sticky;
   top: 0;
   left: 100px;
   margin:0 auto;
   max-width: 1170px;
   background-color: var(--brown);
   padding:2rem;
   display: flex;
   align-items: center;
   justify-content: space-between;
   z-index: 10000;
   gap:1.5rem;
   
}

.message span{
   font-size: 2rem;
   color:var(--black);
}

.message i{
   cursor: pointer;
   color:var(--red);
   font-size: 2.5rem;
}

.message i:hover{
   transform: rotate(90deg);
}

.btn,
.option-btn,
.delete-btn,
.white-btn{
   display: inline-block;
   margin-top: 1rem;
   padding:1rem 2rem;
   cursor: pointer;
   color:var(--white);
   font-size: 1.8rem;
   border-radius: .5rem;
   text-transform: capitalize;
}

.btn:hover,
.option-btn:hover,
.delete-btn:hover{
   background-color: var(--black);
}

.white-btn,
.btn{
   background-color: var(--brown);
}

.option-btn{
   background-color: var(--brown);
}

.delete-btn{
   background-color: var(--red);
}

.white-btn:hover{
   background-color: var(--white);
   color:var(--black);
}

@keyframes fadeIn {
   0%{
      transform: translateY(1rem);
      opacity: .2s;
   }
}


.sidebar {
	position: fixed;
	/*left: -100%;*/
	width: 250px;
	height: 100%;
	background-color: var(--mid-brown);
	transition: all .5s ease;
}

.sidebar:hover {
	
}

.sidebar h2{
	font-size: 22px;
	color: var(--white);
	text-align: center;
	line-height: 70px;
	background-color: var(--mid-brown);
	user-select: none;
}

.sidebar ul a {
	display: block;
	height: 100%;
	width: 100%;
	line-height: 65px;
	font-size: 20px;
	color: var(--white);
	padding-left: 20px;
	box-sizing: border-box;
	border-top: 1px solid rgba(255, 255, 255, .1);
	border-bottom: 1px solid black;
	transition: .5s;
}

ul li:hover a {
	padding-left: 30px;
}


/*admin page sidebar*/

.sidebaradp {
	position: fixed;
	left: 0;
	width: 250px;
	height: 100%;
	background-color: var(--mid-brown);
	transition: all .5s ease;
}

.sidebaradp:hover {
	
}

.sidebaradp h2{
	font-size: 22px;
	color: var(--white);
	text-align: center;
	line-height: 70px;
	background-color: var(--mid-brown);
	user-select: none;
}

.sidebaradp p {
	font-size: 18px;
	color: var(--white);
	padding-bottom: 1rem;
}


.sidebaradp ul a {
	display: block;
	height: 100%;
	width: 100%;
	line-height: 65px;
	font-size: 20px;
	color: var(--white);
	padding-left: 20px;
	box-sizing: border-box;
	border-top: 1px solid rgba(255, 255, 255, .1);
	border-bottom: 1px solid var(--tbbrown);
	transition: .5s;
}

ul li:hover a {
	padding-left: 30px;
	color: var(--light-brown);
}


.sidebar ul a i{
	margin-right: 10px;
}

.sidebaradp ul a i{
	margin-right: 10px;
}


#check {
	display: none;
	
}

/*New add 04_25*/

.active {
  background-color: var(--light-brown);
  color: white;
}

